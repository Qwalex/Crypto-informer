{
  "name": "crypto-signal-bot",
  "version": "1.0.0",
  "description": "Криптовалютный сигнальный бот с техническим анализом и математическими моделями",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "start:api-only": "npm run build && node dist/api-server.js",
    "start:dual": "npm run build && concurrently \"node dist/index.js\" \"node dist/api-server.js\"",
    "dev": "nodemon src/index.ts",
    "dev:api-only": "nodemon src/api-server.ts",
    "dev:dual": "concurrently \"nodemon src/index.ts\" \"nodemon src/api-server.ts\"",
    "api": "nodemon src/api-server.ts",
    "api:build": "npm run build && node dist/api-server.js",
    "admin": "npm run api",
    "build": "tsc",
    "watch": "tsc -w",
    "test": "ts-node src/test.ts",
    "test:swing": "ts-node src/test-swing.ts",
    "test:exchange": "ts-node src/test-exchange-info.ts",
    "test:multi": "ts-node src/test-multi-exchange.ts",
    "test:components": "npm run test",
    "diagnose": "ts-node src/diagnose-signals.ts",
    "get-chat-id": "ts-node src/get-chat-id.ts",
    "setup-telegram": "npm run get-chat-id",
    "docker:up": "docker-compose up -d",
    "docker:up:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose down",
    "docker:down:dev": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:dev": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:restart": "docker-compose restart",
    "docker:restart:dev": "docker-compose -f docker-compose.dev.yml restart",
    "docker:rebuild": "docker-compose down && docker-compose build --no-cache && docker-compose up -d",
    "docker:rebuild:dev": "docker-compose -f docker-compose.dev.yml down && docker-compose -f docker-compose.dev.yml build --no-cache && docker-compose -f docker-compose.dev.yml up -d",
    "production:start": "npm run docker:up",
    "development:start": "npm run docker:up:dev",
    "full-start": "npm run docker:up && npm run dev",
    "full-setup": "./start-full.sh",
    "dashboard": "start dashboard.html",
    "setup": "npm install && npm run build",
    "clean": "rm -rf dist node_modules",
    "monitor": "node monitor.js",
    "status": "node monitor.js"
  },
  "keywords": [
    "crypto",
    "trading",
    "bot",
    "technical-analysis",
    "arima",
    "garch"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.22",
    "axios": "^1.6.0",
    "body-parser": "^2.2.0",
    "ccxt": "^4.1.50",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "multer": "^2.0.1",
    "node-cache": "^5.1.2",
    "node-schedule": "^2.1.1",
    "technicalindicators": "^3.1.0"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.8.0",
    "@types/node-schedule": "^2.1.5",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
